def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger'
]
pipeline{

    agent any 

    tools {
        maven "MAVEN3"
        jdk "OracleJDK8"
    }

    environment{

        registryCredential = 'ecr:us-east-1:awscreds' // Jenkins aws creds
        appRegistry = '829669656648.dkr.ecr.us-east-1.amazonaws.com/vprofileappimg' // actual ECR registry
        vprofileRegistry= 'https://829669656648.dkr.ecr.us-east-1.amazonaws.com' // URL of ECR
        cluster = "vproprod"
        service = "vproappprodsvc"
    }   

    stages{

        

        stage ('Deploy to ECS staging'){
            steps {
                withAWS(credentials: 'awscreds', region: 'us-east-1'){
                    sh 'aws ecs update-service --cluster ${cluster} --service ${service} --force-new-deployment'
                }
            }
        }
    }

    post{
        always {

            echo 'Slack Notification,'
            slackSend channel: '#jenkins-notification',
              color: COLOR_MAP[currentBuild.currentResult],
              message: "*${currentBuild.currentResult}:*Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URL}"
        }
    }
}   